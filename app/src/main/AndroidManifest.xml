<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.colourmoon.gobuddy">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <application
        android:name=".controllers.commoncontrollers.ApplicationController"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".VerifyOtpActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".FingerPrintActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <!--
         <activity
            android:name=".FaceIdOtp"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".custom_subcategory_item"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".FaceIdOtpActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        -->
        <activity
            android:name=".view.activities.RegistrationTypeActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.AppUpdateActivity"
            android:exported="false"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name=".view.activities.ChatActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.MapsActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name=".view.activities.ProviderMainActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".view.activities.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.ProviderPostRegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.OnBoardingActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name=".view.activities.RegistrationSuccessfulActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.OtpVerificationActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.TermsAndConditionsActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/NoActionBarAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.CustomerMainActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".view.activities.RegistrationActivity"
            android:exported="false"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name=".view.activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".view.activities.OnBoardingLoginActivity"
            android:exported="false" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_app_icon_vector" /> <!-- this file provider is for storing images in private directory so that no application can access it -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@android:color/holo_green_dark" /> <!-- this receiver is for broadcast receiver which receives messages needed for auto verification of otp -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" /> <!-- push notifications service -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.colourmoon.gobuddy.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <receiver
            android:name=".utilities.MySmsBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action
                    android:name="com.google.android.gms.auth.api.phone.SMS_RETRIEVED"
                    android:exported="true" />
            </intent-filter>
        </receiver>

        <service
            android:name=".pushnotifications.MyFirebaseCloudMessagingService"
            android:exported="true">
            <intent-filter>
                <action
                    android:name="com.google.firebase.MESSAGING_EVENT"
                    android:exported="true" />
            </intent-filter>
        </service>
    </application>

</manifest>