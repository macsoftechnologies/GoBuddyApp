<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:orientation="vertical"
    android:layout_marginTop="10dp"

    android:layout_marginBottom="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/white"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="2dp"

        app:cardCornerRadius="100dp"
        android:orientation="vertical"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/customer_service_image"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:layout_weight="0.60"
            android:layout_gravity="center"
            android:paddingTop="@dimen/_7sdp"
            android:src="@drawable/ic_settings" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/customer_service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_weight="0.40"
        android:ellipsize="end"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="-7dp"
        android:maxLines="3"
        android:textColor="#000"
        android:textSize="11dp"
        android:text="Beauty and Spa " />

  <!--  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_supervised_user_circle_24"
        android:text=" 12899"

        android:layout_gravity="center"

        android:layout_marginTop="3dp"
        android:textSize="8dp"
        android:textColor="@color/quantum_orange"/>-->

</LinearLayout>
