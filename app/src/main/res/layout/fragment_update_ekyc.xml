<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.fragments.ProvPostRegFragments.UpdateEKycFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/updateEKycLinearLayout"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:src="@drawable/e_kycc" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/address_proof"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:outlineAmbientShadowColor="@color/gray_8ba6c1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:backgroundTint="@color/quantum_orange"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/address_proof_spinner"

                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:entries="@array/address_proof_array" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/address_proof_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_weight="1.4"
                    android:layout_gravity="center"
                    android:layout_marginTop="70dp"
                    android:padding="20dp"
                    android:src="@drawable/image_place_holder" />

                <TextView
                    android:id="@+id/address_proof_imageUploadBtn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0.6"
                    android:background="@drawable/rounded_corner_white"
                    android:paddingTop="10dp"
                    android:backgroundTint="@color/quantum_lightgreen"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/upload"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="16sp" />

            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/id_proof"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:outlineAmbientShadowColor="@color/gray_8ba6c1">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:backgroundTint="@color/quantum_orange"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/idproof_spinner"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/colorPrimary"
                android:entries="@array/id_proof_array" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/idproof_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_weight="1.4"

                    android:layout_marginTop="70dp"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:src="@drawable/image_place_holder" />

                <TextView
                    android:id="@+id/idProof_imageUploadBtn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.6"
                    android:background="@drawable/rounded_corner_white"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/upload"
                    android:backgroundTint="@color/quantum_lightgreen"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/updateEKycLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/updateEkyc_skipBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/skip"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/updateEkyc_nextBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/next"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>