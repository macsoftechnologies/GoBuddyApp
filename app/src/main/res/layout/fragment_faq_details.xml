<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".view.fragments.customerhelpflowfragments.FaqDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/faqDetails_quesView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="How to book a service?" />

        <TextView
            android:id="@+id/faqDetails_ansView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:padding="@dimen/_15sdp"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            tools:text="@string/lorem_ipsum_large_text" />

    </LinearLayout>

</ScrollView>