<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_8sdp"
    android:layout_marginRight="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        android:background="@drawable/promo_code_bg_gradient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/offerPercentage"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/promo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                tools:text="CODE : LAUNCH" />


            <TextView
                android:id="@+id/promo_code_validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                tools:text="VALID UNTIL FEB 2019" />
        </LinearLayout>

        <TextView
            android:id="@+id/offerPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:paddingRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            tools:text="Rs. 150/- OFF" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>