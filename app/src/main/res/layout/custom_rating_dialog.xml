<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_20sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/your_rating"
            android:textAlignment="center"
            android:textSize="@dimen/_15ssp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/successful"
            android:textAlignment="center"
            android:textColor="@color/quantum_googgreen"
            android:textSize="@dimen/_30ssp" />

        <TextView
            android:id="@+id/alert_ratingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/curved_green_bg"
            android:paddingLeft="@dimen/_25sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_25sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textColor="#fff"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            tools:text="4.5" />

        <TextView
            android:id="@+id/alert_okBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/green_rectangular_box"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:text="@string/ok"
            android:textColor="@color/quantum_googgreen"
            android:textSize="@dimen/_15ssp" />
    </LinearLayout>

</LinearLayout>